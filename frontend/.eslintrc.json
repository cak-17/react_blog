{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-console": [
            0
        ],
        "consistent-return": [
            0
        ],
        "react/function-component-definition":  [
            2,
            { "namedComponents": "arrow-function" }
        ],
        "react/prop-types": [ 0 ],
        "react/jsx-props-no-spreading": [ 0 ],
        "react/jsx-indent": [
            "error",
            4
        ],
        "react/jsx-indent-props": [
            2,
            4
        ],
        "indent": [
            "error",
            4
        ],
        "import/no-extraneous-dependencies": [ 0 ]
    }
}
